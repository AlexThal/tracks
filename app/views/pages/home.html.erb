<div class="banner">
  <div class="d-flex justify-content-between">
    <i class="app-icon fa-solid fa-bomb">&nbsp;Tracks</i>
    <i class="login fa-solid fa-arrow-right-to-bracket"></i>
  </div>
  <br>
  <div>
    <h3 class="greeting"> Hi&nbsp;<%= current_user.username %>
    <%= image_tag(current_user.photo, alt:"Your avatar", class:"avatar")  %>
    </h3>
    <br>
  </div>
</div>

<div class="container">
  <h6 class="header-dash mt-3">Last Sessions</h6>
  <div class="sessions">
    <% @sessions.each do |session| %>
      <%= link_to exercise_session_path(session), class: "session-card" do %>
          <% if session.photo %>
            <%= image_tag(session.photo, alt:"photo", class:"image-round")  %>
          <% else %>
           <p class="image-placeholder"></p>
          <% end %>
          <%= session.title %>
          <div class="session-icon">
            <i class="fa-regular fa-pen-to-square"></i>
            <i class="fav-icon fa-regular fa-heart"></i>
          </div>
      <% end %>
    <% end %>
  </div>

  <h6 class="header-dash">Following</h6>
  <i class="fa-regular fa-pen-to-square"></i>
  <i class="fav-icon fa-regular fa-heart"></i>
</div>
<i class="plus-icon fa-solid fa-circle-plus"></i>

